    "version": "0.2.0",
    "configurations": [
        {
            "name": "Dbg: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "ssh",
                "--debug",
                "host"
            ]
        },
        {
            "name": "Dbg: Current File ask Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        }
    ]
}
